<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oktayosman.ticketcenter.controller.LoginController"
            prefHeight="400.0" prefWidth="520.0">
    <left>
        <AnchorPane prefHeight="407.0" prefWidth="228.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="brandingImageView" fitHeight="400.0" fitWidth="228.0"
                       layoutY="86.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="332.0" style="-fx-background-color: #ECECE7;"
                    BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="26.0" layoutY="150.0" text="Username">
                    <font>
                        <Font name="Gadugi" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="usernameTextField" layoutX="92.0" layoutY="147.0"
                           prefHeight="26.0" prefWidth="173.0" promptText="Username"/>
                <Label layoutX="28.0" layoutY="191.0" text="Password">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="enterPasswordField" layoutX="92.0" layoutY="188.0"
                               prefHeight="26.0" prefWidth="173.0" promptText="Password"/>
                <Button fx:id="loginButton" layoutX="22.0" layoutY="272.0"
                        mnemonicParsing="false" onAction="#loginButtonOnAction"
                        prefHeight="32.0" prefWidth="249.0" style="-fx-background-color: #083b66;"
                        text="Login" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button fx:id="cancelButton" layoutX="22.0" layoutY="312.0"
                        mnemonicParsing="false" onAction="#cancelButtonOnAction"
                        prefHeight="32.0" prefWidth="249.0" style="-fx-background-color: #083b66;"
                        text="Cancel" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Label fx:id="loginMessageLabel" alignment="CENTER" layoutX="22.0"
                       layoutY="246.0" prefHeight="19.0" prefWidth="247.0" textAlignment="CENTER"
                       textFill="#d70c0c">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
